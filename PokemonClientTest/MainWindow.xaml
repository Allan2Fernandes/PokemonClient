<Window x:Class="PokemonClientTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PokemonClientTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="1300" KeyUp="Window_KeyUp" Closed="Window_Closed">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="11*"/>
            <ColumnDefinition Width="217*"/>
            <ColumnDefinition Width="1072*"/>
        </Grid.ColumnDefinitions>
        <Canvas x:Name="canvas" Width="900" Height="900" Grid.ColumnSpan="2" Margin="189,42,200,42" Grid.Column="1"/>
        <Button x:Name="connectButton" Content="Connect" HorizontalAlignment="Left" Margin="21,42,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.803,0.822" Grid.Column="1" Click="connectButton_Click"/>
        <Button Content="Discconect" HorizontalAlignment="Left" Margin="25,82,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.32,-1.135" Grid.Column="1" Click="Button_Click"/>

    </Grid>
</Window>
